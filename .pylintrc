# http://pylint.pycqa.org/en/latest/technical_reference/features.html

[MASTER]
ignore =
    .git,
    migrations,
    tests,
    .pytest_cache,
    conftest.py

[FORMAT]
max-line-length = 120
max-args = 7

[SIMILARITIES]
min-similarity-lines = 10

[TYPECHECK]
generated-members =
    objects,
    DoesNotExist,
    id,
    pk,
    _meta,
    base_fields,
    context

[VARIABLES]
init-import = no
dummy-variables-rgx = _|__|dummy

[MESSAGES CONTROL]
disable =
    missing-docstring,
    invalid-name,
    too-few-public-methods,
    too-many-ancestors,
    unused-argument,
    unused-import,
    logging-fstring-interpolation,
    too-many-lines,
    abstract-method,
    import-outside-toplevel,
    raise-missing-from,
    super-with-arguments,
    duplicate-code,
    consider-using-f-string
